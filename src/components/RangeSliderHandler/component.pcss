.root
{
  background: #fff;
  font-weight: normal;
  color: #454545;
  margin-left: -10px;
  position: absolute;
  z-index: 2;
  width: 20px;
  height: 20px;
  cursor: pointer;
  -ms-touch-action: none;
  touch-action: none;
  border-radius: 50%;
  box-shadow: 0 0 4px 2px rgba(0,0,0,0.15);
  border: 3px solid #5f90dd;
}
  .root:active
  {
	filter: brightness( 95% );
  }

