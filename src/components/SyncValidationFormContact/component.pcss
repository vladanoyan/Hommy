.form>div>div>span {
  border: none;
  font-weight: 700;
  color: #700;
  display: block;
  text-align: left;
  position: absolute;
  top:10px;
  right:10px;
  font-size: responsive 12px 14px;

}
.form>div>div{
  position: relative;
}
.form>div>div>span:before{
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  content: "!";
  margin-right: 5px;
  color: #fff;
  background: #771400;
  width: 15px;
  height: 15px;
  text-align: center;
  border-radius: 25px;
  font-weight: 700;
  margin-bottom: 5px;
}
.sendBtn{
  color: #fff;
  background-color: #5f90dd;
  border-color: #fff;
  display: inline-block;
  font-weight: normal;
  line-height: 1.25;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  user-select: none;
  padding: 0.5rem 1rem;
  font-size: 1rem;
  border-radius: 0.25rem;
  margin-top: 20px;
  position: relative;
  top:0;
  transition: none;
}
.sendBtn:hover{
  color: #fff;
  background-color: #5f90dd;
  border-color: #fff;
}
.sendBtn:active{
  position: relative;
  top:3px;
}

.iconMail{
  margin-left: 5px;
  font-size: 25px;
}
.form .textarea{
  width: 100%;
  height: 140px;
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 0.25rem;
  padding: 10px;

}

.form label{
  color: rgba(31, 36, 67, 0.77)!important;
}

.form input{
  display: block;
  width: 100%;
  padding: 0.5rem 0.75rem;
  font-size: 1rem;
  line-height: 1.25;
  color: #464a4c;
  background-color: #fff;
  background-image: none;
  background-clip: padding-box;
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 0.25rem;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  margin-bottom: 10px;
}
.form input:focus{
  border-color: rgba(95, 144, 221, 0.55);
}
.async {
  position: relative;
}

.async:after{
  display: inline-block;
  content: "";
  position: absolute;
  top: 7px;
  right: 7px;
  z-index: 200;
  height: 16px;
  width: 16px;
  background-image: url(data:image/gif;base64,);
}
