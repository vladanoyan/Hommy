.mainImage img {
  display: block;
  background-size: cover;
  width: 100%;
  height: 174px;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  object-fit: cover;

}

.mainImage {
  position: relative;
}

.arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
  outline: none;
}

.arrow.left {
  left: 10px;
}

.arrow.right {
  right: 10px;
}
